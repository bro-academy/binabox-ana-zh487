{% from "ui/picture.twig" import picture %}
{% from "ui/icon.twig" import icon %}

<article class="blog-article">

	{{ picture(
			"blog-article__image",
			item.picture.src,
			item.picture.alt,
			item.picture.width,
			item.picture.height,
			"center",
			"cover"
		) }}

	<span class="blog-article__label item-label">{{ item.label }}</span>
	<div class="article-info">
		<div class="article-info__module">
			{{ icon ("article-info__icon", "user", 16, 16) }}
			<span class="article-info__author">{{ item.author }}</span>
		</div>
		<div class="article-info__module">
			{{ icon ("article-info__icon", "calendar", 16, 16) }}
			<time datetime="{{ item.date }}" class="article-info__date">{{ item.date_text}}</time>
		</div>
	</div>
	<div class="blog-article__text">
		<h3 class="blog-article__header">{{ item.header }}</h3>
		<p class="blog-article__description">{{ item.description }}</p>
	</div>
	<a href="{{ item.link }}" class="blog-article__button button">Read more
		{{ icon ("button__icon", "right", 24, 24) }}
	</a>
</article>
