{% from "ui/icon.twig" import icon %}

<header class="header">
	<a href="/" class="header__logo">
		<svg class="header__logo-icon" width="36px" height="40px"><use href="/src/assets/logos/logo.svg" /></svg>
		<svg class="header__logo-text" width="135px" height="21px"><use href="/src/assets/logos/binabox.svg" /></svg>
	</a>
	<nav class="header__navigation">
		<ul class="header__navigation-list">
			{% for item in common.header.navigation %}
				<li class="header__navigation-item">
					<a href="{{ item.link }}" class="header__navigation-link link
												{% if item.link == page %}
												header__navigation-link--active
												{% endif %}
												">
						{{ item.text }}
						{{ icon ("header__navigation-icon", "down", 24, 24) }}
					</a>
				</li>
			{% endfor %}
		</ul>
	</nav>
	<div class="header__controls">


		<div class="header__controls-search">{% include '/search.twig' with { item:common.header.search } %}</div>


		<a class="header__controls-button button button--large" href="{{ common.header.controls.button_discord_link }}">
			{{ icon ("button__icon", "discord", 24, 24) }}
			{{ common.header.controls.button_discord_text }}
		</a>
		<button type="button" class="header__controls-button button button--large button--primary">
			{{ icon ("button__icon", "user", 24, 24) }}
			{{ common.header.controls.button_login_text }}
		</button>
	</div>
</header>
