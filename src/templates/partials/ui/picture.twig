{% macro picture(classes, source, alt, width, height, position, fit) %}

    <picture>
        <source srcset="/src/assets/images/{{ source }}?format=webp" type="image/webp">
        <source srcset="/src/assets/images/{{ source }}?format=avif" type="image/avif">
        <img 
            class="{{ classes }}"
            src="/src/assets/images/{{ source }}"
            alt="{{ alt }}"
            loading="lazy"
            decoding="async"
            width="{{ width }}"
            height="{{ height }}"
            style="object-position: {{ position }}; object-fit: {{ fit }}">
    </picture>

{% endmacro %}