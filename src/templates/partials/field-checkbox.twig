<div class="field-checkbox {% if item.toggle == "yes" %}field-toggle{% endif %}">
	<input 
        type="checkbox" 
        id="{{ item.id }}" 
        name="{{ item.name }}" 
        value="{{ item.value }}" 
        class="field-checkbox__input" 
        {% if item.required == "yes" %} required {% endif %}
        {% if item.checked == "yes" %} checked {% endif %}
    />
	<label 
        for="{{ item.id }}" 
        class="label-default label-checkbox"
    >
		{{ item.label }}
	</label>
</div>
