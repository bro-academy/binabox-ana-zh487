{% from "ui/picture.twig" import picture %}

<figure class="picture">

	{{ picture(
			"picture__image",
			item.srcMobile,
			item.alt,
			item.width,
			item.height,
			item.position,
			"cover",
			item.srcTablet,
			item.srcDesktop,
			item.srcDesktopLg
		) }}

	<figcaption class="picture__title">{{ item.title }}</figcaption>
</figure>