{% set page="blog.html" %}

{% extends 'src/templates/layouts/base.twig' %}

{% from 'src/templates/partials/ui/icon.twig' import icon %}

{% block content %}

	{% include 'src/templates/partials/blog_header.twig' %}

	{% include 'src/templates/partials/blog_aside.twig' %}

	<article class="article-page">

		{% for item in blog.article.main_picture %}
			{% include 'src/templates/partials/article_picture.twig' %}
		{% endfor %}

		{% include 'src/templates/partials/article_header.twig' %}

		<p class="article-page__text">{{ blog.article.paragraph_1 }}</p>

		<ul class="article-page__list">
			{% for item in blog.article.list %}
				<li class="article-page__list-item">{{ item.text }}</li>
			{% endfor %}
		</ul>

		<ul class="icon-list">
			{% for item in blog.article.icon_list %}
				<li class="icon-list__item">{{ item.text }}</li>
			{% endfor %}
		</ul>

		{% include 'src/templates/partials/article_blockquote.twig' %}

		<ul class="picture-list">
			{% for item in blog.article.list_picture %}
				<li class="picture-list__item">
					{% include 'src/templates/partials/article_picture.twig' %}
				</li>
			{% endfor %}
		</ul>

		<h3 class="sub-header">{{ blog.article.sub_header_1 }}</h3>

		<p class="article-page__text">{{ blog.article.paragraph_2 }}</p>

		<p class="article-page__text">{{ blog.article.paragraph_3 }}</p>

		<h3 class="sub-header">{{ blog.article.sub_header_2 }}</h3>

		<p class="article-page__text">{{ blog.article.paragraph_4 }}</p>

		{% include 'src/templates/partials/article_footer.twig' %}

	</article>

{% endblock %}
